  <% if @tracks == nil %>
    <p> Have no saved songs yet </p>
  <% else %>
    <p>You are here</p>
    <div class="container-grid">
      <header>Search for keyword "track"</header>
        <section>
      <form class="" action="/playlists" method="post">
      <div class="cards">
          <% @tracks.each do |track| %>
          <div class="card">
            <h1> <%= track.name %> </h1>
              <iframe width="250px" height="200px" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= track.id %>&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true&visual=true"></iframe><div style="font-size: 10px; color: #cccccc;line-break: anywhere;word-break: normal;overflow: hidden;white-space: nowrap;text-overflow: ellipsis; font-family: Interstate,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Garuda,Verdana,Tahoma,sans-serif;font-weight: 100;"><a href="<%= track.url %>" title="<%= track.name %>" target="_blank" style="color: #cccccc; text-decoration: none;"> <%= track.name %></a> Â· <a href="<%= track.url %>" title="<%= track.name %>" target="_blank" style="color: #cccccc; text-decoration: none;">Hard Way</a>
            <label><%= @playlist.name %></label>
          <input type="checkbox" name="playlist[id][]" value="<%= @playlist.id %>"><br>
          <%# <label class="checkbox"> %>
          <input type="checkbox" name="track" value="<%= track %>" checked="checked" style="opacity:0; position:absolute; left:9999px;">
        </div>

   </div>
  <%end%>
  </div>
  <input type="submit" name="" value="submit">
  </form>
  <%end%>

